article(ng-show='movies.length')
  ul(id='movie-list')
    li(ng-repeat='movie in movies')
      .view
        span
          {{movie.title}} ({{movie.year}})
        span
          {{movie.rating}}
        span
          a(href='/movie/{{movie._id}}/')
            [+] more

div.pagination
  ul
    li(ng-class='prevPageDisabled()')
      a(href='#/movies/') «« First
    li(ng-class='prevPageDisabled()')
      a(href='#/movies/{{currentPage-1}}') « Prev
    li(ng-repeat='n in range()', ng-class='{active: n == currentPage}')
      a(href='#/movies/{{n+1}}') {{n+1}}
    li(ng-class='nextPageDisabled()')
      a(href='#/movies/{{currentPage+1}}') Next »
    li(ng-class='nextPageDisabled()')
      a(href='#/movies/{{totalPages-1}}') Last »»
